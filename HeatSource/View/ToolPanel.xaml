                            <Rectangle x:Name="BackgroundGradient"
        						Stroke="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}"
        						StrokeThickness="0" Margin="1,0,-1,0" RadiusX="2" RadiusY="2" Fill="{x:Null}"/>
                            <Grid x:Name="FocusVisual" Visibility="Collapsed">
                                <Rectangle Margin="-2,1,-2,-2"
        							Stroke="{StaticResource AccentBrush}"
        							StrokeThickness="0"
        							StrokeDashArray="1.5 1.5" />
                            </Grid>
                            <ContentPresenter Margin="4,5,4,4"
        						Content="{TemplateBinding Content}"
